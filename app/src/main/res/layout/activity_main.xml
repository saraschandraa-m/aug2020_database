<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/et_student_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_student_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_student_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_student_year"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Year of Passout"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_student_course"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Student Course"
        android:inputType="text" />


    <Button
        android:id="@+id/btn_enter_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onEnterClicked"
        android:text="Enter Student" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onViewStudentClicked"
        android:text="View List" />

</LinearLayout>